{{!< layout}}

{{!-- The comment above "< default" means - insert everything in this file into
    the {{{body}}} of the default.hbs template, containing the blog header/footer. --}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

<section>
  <div class="post">

    <h1 class="post-title">
      <a href="{{url}}">{{title}}</a>
    </h1>

    <span class="post-date">
      <i class="fa fa-user"></i> {{author}}
      <i class="fa fa-clock-o"></i> <time class="post-date" datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
      <i class="fa fa-tags"></i> {{tags prefix=" on " limit="2"}}
    </span>

    <p>{{content}}</p>
  </div>
  <hr>

  <div class="related">
    <h4>Related Posts</h4>
    <ul class="related-posts">

        {{#get "posts" include="author,tags,date"}}
          {{#foreach posts limit="3"}}
            <li>
              <h5>
                <a href="{{url}}">{{title}} &middot; {{date format="DD MMMM YYYY"}}</a>
              </h5>
            </li>
          {{/foreach}}
        {{/get}}

    </ul>
  </div>
  <hr>

  <div class="fb-like" data-href="#" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div>
  <div class="fb-comments" data-href="#" data-colorscheme="light"></div>

  <div class="post-pagination">
    <div class="pagination">
    {{#next_post}}
      <a class="pagination-item newer" href="{{url}}"> Next Article >></a>
    {{/next_post}}

    {{#prev_post}}
      <a class="pagination-item older" href="{{url}}"><< Prev Article</a>
    {{/prev_post}}
    </div>
  </div>

</section>

{{/post}}
